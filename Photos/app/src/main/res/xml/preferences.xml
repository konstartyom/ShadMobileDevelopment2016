<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="pref_numbercol"
        android:title="@string/pref_numberCol"
        android:entries="@array/pref_numberColValues"
        android:entryValues="@array/pref_numberColValues"
        android:summary="@string/numcol_summary"
        android:defaultValue="2" />
    <ListPreference
        android:key="pref_theme"
        android:title="@string/pref_theme"
        android:entries="@array/pref_themeNames"
        android:entryValues="@array/pref_themeKeys"
        android:summary="%s"
        android:defaultValue="light" />
</PreferenceScreen>